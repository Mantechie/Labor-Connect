<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title><%= title %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
</head>
<body>
  <div class="container py-4">
    <div class="text-center mb-5">
      <h1 class="fw-bold"><%= title %></h1>
      <p class="text-muted">Quick, Verified, and Reliable</p>
      <div class="input-group w-75 mx-auto">
        <input type="text" class="form-control" placeholder="Search for electrician, plumber...">
        <button class="btn btn-primary">Search</button>
      </div>
    </div>

    <h4 class="mb-3">Popular Categories</h4>
    <div class="row mb-5">
      <% categories.forEach(cat => { %>
        <div class="col-md-3 mb-3">
          <div class="card text-center p-3 shadow-sm">
            <img src="<%= cat.img %>" alt="<%= cat.title %>" style="width: 60px; height: 60px;" class="mx-auto mb-2">
            <h6><%= cat.title %></h6>
          </div>
        </div>
      <% }) %>
    </div>

    <h4 class="mb-3">Featured Laborers</h4>
    <div class="row mb-5">
      <% laborers.forEach(lab => { %>
        <div class="col-md-4 mb-3">
          <div class="card p-3 shadow-sm">
            <h5><%= lab.name %></h5>
            <p><%= lab.specialization %></p>
            <p>‚≠ê <%= lab.rating %> / 5</p>
            <a href="#" class="btn btn-sm btn-outline-primary">View Profile</a>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="text-center">
      <a href="/job-post" class="btn btn-success me-2">Post a Job</a>
      <a href="/signup" class="btn btn-outline-secondary">Join Now</a>
    </div>
  </div>
</body>
</html>
